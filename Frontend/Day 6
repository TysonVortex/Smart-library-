---

âš™ï¸ Step 2: Create delete_book.php in backend/

<?php
include 'db.php';

if (isset($_GET['id'])) {
    $id = $_GET['id'];

    $stmt = $conn->prepare("UPDATE book SET is_deleted = TRUE WHERE book_id = ?");
    $stmt->bind_param("i", $id);

    if ($stmt->execute()) {
        header("Location: ../frontend/view_books.php?deleted=1");
        exit;
    } else {
        echo "âŒ Error: " . $stmt->error;
    }

    $stmt->close();
} else {
    echo "âŒ No book ID provided.";
}

$conn->close();
?>


