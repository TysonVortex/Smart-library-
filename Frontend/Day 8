âš™ï¸ Step 3: Create handle_request.php (Back End)

Location: /backend/handle_request.php

<?php
include 'db.php';

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $student_name = $_POST['student_name'];
    $student_id   = $_POST['student_id'];
    $book_id      = $_POST['book_id'];

    $stmt = $conn->prepare("INSERT INTO book_requests (student_name, student_id, book_id) VALUES (?, ?, ?)");
    $stmt->bind_param("ssi", $student_name, $student_id, $book_id);

    if ($stmt->execute()) {
        echo "âœ… Book request submitted successfully. <a href='../client/view_books.php'>Back to books</a>";
    } else {
        echo "âŒ Error: " . $stmt->error;
    }

    $stmt->close();
    $conn->close();
}
?>


